<%- include ('./../partials/header.ejs'); -%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-pizza-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="pizza_name" id="pizza_name" placeholder="Pizza Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="description" id="description" placeholder="Pizza description" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="pizza_price" id="pizza_price" placeholder="Pizza Price" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="pizza_image"><b>Pizza Image</b></label><br>
                    <input type="file" name="image" id="pizza_image" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Pizza</button>
        </form>
    </div>
<%- include ('./../partials/footer.ejs'); -%>