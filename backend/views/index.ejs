<%- include ('partials/header.ejs'); -%>
    <div class="row">
        <div class="col-12">
            <div class="table-wrapper">
                <% if (pizzas.length > 0) {%>
                <table class="table table-hovered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Image</th>
                            <th scope="col">Pizza</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pizzas.forEach((pizza, index) => { %>
                            <tr>
                                <th scope="row"><%= pizza.id %></th>
                                <td><img src="/assets/img/<%= pizza.image %>" class="rounded-circle pizza-img" alt=""></td>
                                <td><%= pizza.pizza_name %></td>
                                <td><%= pizza.description %></td>
                                <td><%= pizza.pizza_price %> Lei</td>
                                <td>
                                    <a href="/edit-pizza/<%= pizza.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                    <a href="/delete-pizza/<%= pizza.id %>" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <p class="text-center">No pizza found. Go <a href="/add-pizza">here</a> to add a pizza.</p>
                <% } %>
            </div>
        </div>
    </div>
<%- include ('partials/footer.ejs'); -%>